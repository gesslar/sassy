{
  "name": "@gesslar/sassy",
  "description": "Make gorgeous themes that speak as boldly as you do.",
  "author": {
    "name": "gesslar",
    "url": "https://gesslar.dev"
  },
  "version": "4.5.0",
  "license": "Unlicense",
  "homepage": "https://sassy.gesslar.io",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gesslar/sassy.git"
  },
  "keywords": [
    "asmr",
    "generator",
    "huffing",
    "json5",
    "sniffsniffsniff",
    "taylorswift",
    "theme",
    "vs code",
    "vscode",
    "yaml"
  ],
  "type": "module",
  "bin": "src/cli.js",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./src/index.js"
    }
  },
  "files": [
    "src/",
    "types/",
    "UNLICENSE.txt"
  ],
  "scripts": {
    "clean": "rm -rfv ./dist",
    "build": "mkdir -pv ./dist && npm pack --pack-destination ./dist/",
    "types": "node -e \"require('fs').rmSync('types',{recursive:true,force:true});\" && tsc -p tsconfig.types.json",
    "exec": "node ./src/cli.js",
    "lint": "eslint src/",
    "test": "node --test tests/**/*.test.js",
    "test:coverage": "node --experimental-test-coverage --test tests/**/*.test.js",
    "submit": "npm publish --access public --//registry.npmjs.org/:_authToken=\"${NPM_ACCESS_TOKEN}\"",
    "examples": "node ./examples/validator.js",
    "update": "npx npm-check-updates -u && npm install",
    "docs:dev": "cd docs && npm run start",
    "docs:build": "cd docs && npm run build",
    "docs:deploy": "gh workflow run deploy-docs.yml",
    "pr": "gt submit -p --ai",
    "patch": "npm version patch",
    "minor": "npm version minor",
    "major": "npm version major"
  },
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@gesslar/colours": "^0.8.0",
    "@gesslar/toolkit": "^3.42.0",
    "chokidar": "^5.0.0",
    "color-support": "^1.1.3",
    "commander": "^14.0.3",
    "culori": "^4.0.2",
    "globby": "^16.1.1",
    "json5": "^2.2.3",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@docusaurus/eslint-plugin": "^3.9.2",
    "@gesslar/uglier": "^2.0.0",
    "eslint": "^10.0.2",
    "typescript": "^5.9.3"
  }
}
